snippet chap "\chapter{}" b
\chapter{${VISUAL}$1}
\label{chap:$2}

$0
endsnippet
snippet sec "\section{}" b
\section{${VISUAL}$1}
\label{sec:$2}

$0
endsnippet

snippet sub "\subsection{}" b
\subsection{${VISUAL}$1}
\label{subsec:$2}

$0
endsnippet

snippet par "\paragraph{}" b
\paragraph{${VISUAL}$1}
$0
endsnippet

