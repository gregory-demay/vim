#---------------------ENVIRONMENTS--------------------------
#-----------------------------------------------------------
snippet env "\begin{env}" b
\begin{${VISUAL}$1}
 $2
\end{$1}
$0
endsnippet

snippet def "definition env" b
\begin{definition}
 \label{def:$1}
 ${VISUAL}$2
\end{definition}
$0
endsnippet

snippet eqs "equation* env" b
\begin{equation*}
 ${VISUAL}$1
\end{equation*}
$0
endsnippet


#-----------------------------------------------------------
#-----------------------COMMANDS----------------------------
#-----------------------------------------------------------


snippet c "\command{}" i
\\${VISUAL}$1{$2}$0
endsnippet

snippet newc "\newcommand" b
%${1:description}
\newcommand{\\${2:name}}[${3:NumberArgs}][${4:defaultValue}]{${5:stuff}}
$0
endsnippet

